@using SimpleSocialApp.Models.ViewModels;
@using SimpleSocialApp.Models.ViewModels.Chats

@model CreateChatViewModel

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Chat Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>

    <div class="form-group">
        <label>Select Participants</label>
        <div class="checkbox-list">
            @foreach (var user in Model.Users)
            {
                 <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="user_@user.Id" name="ParticipantsIds" value="@user.Id" />
                    <label class="form-check-label" for="user_@user.Id">@user.FirstName</label>
                </div> 
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Chat</button>
</form>
<script>

    function validateForm() {
        var checkboxes = document.querySelectorAll('input[name="ParticipantsIds"]:checked');
        if (checkboxes.length === 0) {
            document.getElementById("error-message").style.display = "block";
            return false; // Prevent form submission
        }
        return true; // Allow form submission
    }
</script>
